<!-- HEADER -->
{% include "./layout/header.twig" %}

    <div class="content">
        {% block page %}
        {% include "./layout/header-menu.twig" %}

        <div class="banner-top">
            <div class="banner-top__shadow-top"></div>
            <div class="banner-top__shadow-bottom"></div>
        </div>
        <div class="page-content with-slider">
            <div class="c-grid">
                <div class="c-grid-col c-grid-col--50">
                    <div class="c-grid-row">
                        <div class="banner-sale banner-sale--small">
                            <a href="#" class="banner-sale-card">
                                <img src="./../src/img/banner-sale-1.jpg" alt="">
                            </a>
                            <a href="#" class="banner-sale-card">
                                <img src="./../src/img/banner-sale-2.jpg" alt="">
